# Azure Deployment Environment Variables
# Copy to .env and fill in your Azure resource details

# === AZURE COSMOS DB (MANAGED IDENTITY - NO KEY REQUIRED!) ===
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_DATABASE_NAME=appraisal-management
AZURE_COSMOS_CONTAINER_ORDERS=orders
AZURE_COSMOS_CONTAINER_VENDORS=vendors
AZURE_COSMOS_CONTAINER_PROPERTIES=properties
AZURE_COSMOS_CONTAINER_PROPERTY_SUMMARIES=property-summaries

# === EXTERNAL API KEYS ===
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# === AZURE SERVICE BUS (MANAGED IDENTITY - NO CONNECTION STRING REQUIRED!) ===
AZURE_SERVICE_BUS_NAMESPACE=your-servicebus.servicebus.windows.net

# === AUTHENTICATION ===
JWT_SECRET=your-super-secret-jwt-signing-key-change-this
JWT_EXPIRES_IN=24h

# === SERVER CONFIGURATION ===
NODE_ENV=production
PORT=8080
LOG_LEVEL=info

# === AZURE APP SERVICE ===
WEBSITE_SITE_NAME=your-app-service-name
SCM_DO_BUILD_DURING_DEPLOYMENT=true