# ====================================
# Azure Entra ID (Azure AD) Authentication
# ====================================
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_AUDIENCE=api://your-api-scope
# AZURE_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0

# Azure AD Group Object IDs for Role Mapping
AZURE_ADMIN_GROUP_ID=
AZURE_MANAGER_GROUP_ID=
AZURE_QC_ANALYST_GROUP_ID=
AZURE_APPRAISER_GROUP_ID=

# ====================================
# Development Settings
# ====================================
NODE_ENV=development
PORT=3000
BYPASS_AUTH=true

# ====================================
# Legacy JWT (for backward compatibility)
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ====================================
# Azure Services
# ====================================
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key-here
AZURE_COSMOS_DATABASE_NAME=appraisal-management

AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ====================================
# External APIs
# ====================================
GOOGLE_MAPS_API_KEY=your-google-maps-key
BRIDGE_API_KEY=your-bridge-mls-key
BRIDGE_SERVER_TOKEN=your-bridge-server-token

# US Census API
CENSUS_API_KEY=your-census-api-key

# Environmental APIs
AIRNOW_API_KEY=your-airnow-api-key
NPS_API_KEY=your-nps-api-key

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# CORS
# ====================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ================================================================
# COMMUNICATION SERVICES (Email, SMS, Chat)
# ================================================================

# Azure Communication Services
AZURE_COMMUNICATION_ENDPOINT=https://your-acs-resource.communication.azure.com
# Optional: Use API key for local dev (Managed Identity preferred for production)
# AZURE_COMMUNICATION_API_KEY=your-acs-api-key

# Email Configuration
AZURE_COMMUNICATION_EMAIL_DOMAIN=noreply@yourdomain.com

# SMS Configuration (optional)
# AZURE_COMMUNICATION_SMS_NUMBER=+1234567890

# ================================================================
# AI PROVIDERS (Configure at least ONE for AI features)
# ================================================================

# --- Google Gemini (Alternative/Backup) ---
GOOGLE_GEMINI_API_KEY=your-google-gemini-key
# GOOGLE_GEMINI_ENDPOINT=https://generativelanguage.googleapis.com/v1beta
# GOOGLE_GEMINI_RPM=60
# GOOGLE_GEMINI_TPM=32000

# --- SambaNova (High Performance) ---
# SAMBANOVA_API_KEY=your-sambanova-key
# SAMBANOVA_ENDPOINT=https://api.sambanova.ai/v1
# SAMBANOVA_RPM=100
# SAMBANOVA_TPM=100000

# --- Certo AI (Custom vLLM - Self-Hosted) ---
# CERTO_ENDPOINT=http://localhost:8000/v1
# CERTO_API_KEY=your-certo-key
# CERTO_CLIENT_ID=your-client-id
# CERTO_TENANT_ID=your-tenant-id
# CERTO_USER_ID=your-user-id
# CERTO_RPM=1000
# CERTO_TPM=500000

# ================================================================
# AI PROVIDER ROUTING (Optional - defaults to 'auto')
# ================================================================
# Values: 'azure-openai', 'google-gemini', 'sambanova', 'certo', 'auto'
# AI_PROVIDER_TEXT_GENERATION=auto
# AI_PROVIDER_VISION=google-gemini
# AI_PROVIDER_EMBEDDINGS=azure-openai
# AI_PROVIDER_QC_ANALYSIS=auto
# AI_PROVIDER_DOCUMENT_PROCESSING=google-gemini
# AI_PROVIDER_PROPERTY_DESCRIPTION=auto
# AI_PROVIDER_MARKET_INSIGHTS=auto

# ================================================================
# EVENT-DRIVEN ARCHITECTURE
# ================================================================

# Azure Service Bus (Event Messaging)
# AZURE_SERVICE_BUS_CONNECTION_STRING=Endpoint=sb://your-servicebus.servicebus.windows.net/;SharedAccessKeyName=...

# Azure Web PubSub (WebSocket Notifications)
# AZURE_WEB_PUBSUB_CONNECTION_STRING=Endpoint=https://your-pubsub.webpubsub.azure.com;AccessKey=...
# WEBSOCKET_USE_LOCAL=true  # For local development
