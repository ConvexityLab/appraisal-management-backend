# ====================================
# Azure Entra ID (Azure AD) Authentication
# ====================================
AZURE_TENANT_ID=your-tenant-id-here
AZURE_CLIENT_ID=your-client-id-here
AZURE_AUDIENCE=api://your-api-scope
# AZURE_ISSUER=https://login.microsoftonline.com/{tenant-id}/v2.0

# Azure AD Group Object IDs for Role Mapping
AZURE_ADMIN_GROUP_ID=
AZURE_MANAGER_GROUP_ID=
AZURE_QC_ANALYST_GROUP_ID=
AZURE_APPRAISER_GROUP_ID=

# ====================================
# Development Settings
# ====================================
NODE_ENV=development
PORT=3000
BYPASS_AUTH=true

# ====================================
# Legacy JWT (for backward compatibility)
# ====================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ====================================
# Azure Services
# ====================================
AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
AZURE_COSMOS_KEY=your-cosmos-key-here
AZURE_COSMOS_DATABASE_NAME=appraisal-management

AZURE_OPENAI_ENDPOINT=https://your-openai-instance.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ====================================
# External APIs
# ====================================
GOOGLE_MAPS_API_KEY=your-google-maps-key
BRIDGE_API_KEY=your-bridge-mls-key
BRIDGE_SERVER_TOKEN=your-bridge-server-token

# US Census API
CENSUS_API_KEY=your-census-api-key

# Environmental APIs
AIRNOW_API_KEY=your-airnow-api-key
NPS_API_KEY=your-nps-api-key

# ====================================
# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# CORS
# ====================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com
