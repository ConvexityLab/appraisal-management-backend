# Appraisal Management Platform - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info

# Database Configuration (to be implemented)
DATABASE_URL=postgresql://username:password@localhost:5432/appraisal_management
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# External API Configuration
CENSUS_API_KEY=your-census-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
AZURE_MAPS_API_KEY=your-azure-maps-api-key
SMARTYSTREETS_AUTH_ID=your-smartystreets-auth-id
SMARTYSTREETS_AUTH_TOKEN=your-smartystreets-auth-token

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key

# File Storage Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,jpg,jpeg,png
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=appraisal-documents

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn

# Feature Flags
ENABLE_QC_VALIDATION=true
ENABLE_VENDOR_ASSIGNMENT=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_ANALYTICS=true