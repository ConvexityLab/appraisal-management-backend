{
  "name": "appraisal-management-backend",
  "version": "1.0.0",
  "description": "Enterprise Appraisal Management System Backend",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verification": "node dist/test-verification.js",
    "test:perligo": "node dist/perligo-integration-demo.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist/",
    "build:clean": "npm run clean && npm run build",
    "docker:build": "docker build -t appraisal-management .",
    "docker:run": "docker run -p 3000:3000 appraisal-management",
    "container:build": "docker build -t appraisal-management:latest .",
    "container:run": "docker run -p 3000:3000 --env-file .env appraisal-management:latest"
  },
  "keywords": [
    "appraisal",
    "valuation",
    "real-estate",
    "ai",
    "typescript",
    "azure"
  ],
  "author": "Appraisal Management Team",
  "license": "MIT",
  "dependencies": {
    "@azure/cosmos": "^4.5.1",
    "@azure/event-hubs": "^5.11.2",
    "@azure/identity": "^3.3.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "@azure/openai": "^1.0.0-beta.12",
    "@azure/service-bus": "^7.9.2",
    "@azure/storage-blob": "^12.15.0",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mongodb": "^6.20.0",
    "mssql": "^9.1.1",
    "multer": "^1.4.5-lts.1",
    "perligo": "file:../perligo",
    "perligo-agents": "file:../perligo-agents",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.19.17",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
